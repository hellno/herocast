{
  "package": {
    "productName": "herocast",
    "version": "0.0.1"
  },
  "build": {
    "distDir": "../build",
    "devPath": "http://127.0.0.1:4590",
    "beforeDevCommand": "yarn cross-env BROWSER=none yarn start",
    "beforeBuildCommand": "yarn build",
    "withGlobalTauri": true
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "xyz.herocast.app",
      "icon": [
        "icons/icon.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "Social Networking",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.myapp.com/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIzNUU1RTRBNDAzNzZFRDcKUldUWGJqZEFTbDVlSTNkWWt0ZUlCM0NmMEV3QTNZM2x0OFVZVjlZdEtOZlpGREpjU2NlSGJRaUcK"
    },
    "allowlist": {
      "shell": {
        "open": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://*"
        ]
      }
    },
    "windows": [
      {
        "title": "herocast",
        "label": "main",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": false,
        "decorations": true,
        "alwaysOnTop": false,
        "transparent": false,
        "theme": "Dark",
        "titleBarStyle": "Transparent"
      },
      {
        "width": 600,
        "height": 500,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "title": "herocast",
        "theme": "Dark",
        "visible": true
      }
    ],
    "security": {
      "csp": ""
    }
  }
}
