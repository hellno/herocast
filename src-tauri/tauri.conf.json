{
  "package": {
    "productName": "herocast",
    "version": "0.0.1"
  },
  "build": {
    "distDir": "../build",
    "devPath": "http://127.0.0.1:4590",
    "beforeDevCommand": "yarn cross-env BROWSER=none yarn start",
    "beforeBuildCommand": "yarn build",
    "withGlobalTauri": true
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "xyz.herocast.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "Social Media",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "http": {
        "all": true,
        "request": true,
        "scope": [
          "https://*"
        ]
      }
    },
    "windows": [
      {
        "title": "herocast",
        "label": "main",
        "minWidth": 1280,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "visible": true,
        "decorations": true,
        "alwaysOnTop": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": ""
    }
  }
}
